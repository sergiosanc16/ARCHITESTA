{% extends 'baseDatatable.html.twig' %}


{% set id_tabla = 'imagen' %}
{% set nuevo = path('app_testa_timagen_new') %}
{% set muestraMenu = true %}

{% block title %}{{id_tabla}} Indice{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}

<h2>Listado de Im√°genes</h2>
    {% if nuevo|default(null) %}
    <div class="float-right">
    <div class="btn-group mr-2 btn-group-sm" role="group"  title="Nuevo Registro" >
            <button type="button" class="btn boton  mr-2 btn-group-sm" role="button" onclick="location.href='{{  nuevo }}'"><i class="fa fa-plus-square"></i> Nuevo Registro</button>
        </div>
    </div>
    {% endif %}
    <table id="{{id_tabla}}" class="table table-striped table-bordered table-sm  ">
        <thead>
            <tr>
                <th width="5%">Id</th>
                <th>Imagen</th>
                <th>Num Testamentos Asociados</th>
                <th width="10%">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for testa_timagen in testa_timagens %}
            <tr>
                <td>{{ testa_timagen.id }}</td>
                <td>
                    {% if asset_exists('img/fichas/'~ testa_timagen.desImagen) %}
                        <a href="{{ '/img/fichas/'~ testa_timagen.desImagen }}"> {{ testa_timagen.desImagen }}</a> 
                    {% else %}
                        {{ testa_timagen.desImagen }}
                    {% endif %}
                </td>
                <td>{{ testa_timagen.numTestamento }}</td>
                <td>
                    <a href="{{ path('app_testa_ttestamento_imagen_index', {'id_imagen': testa_timagen.id}) }}" title="Mostrar Testamento"><img  width="30px"   src="{{ asset('img/testamento.png') }}"></a>
                    <a href="{{ path('app_testa_timagen_show', {'id': testa_timagen.id}) }}" title="Mostrar Registro"><img  width="30px"   src="{{ asset('img/mostrar.png') }}"></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_testa_timagen_edit', {'id': testa_timagen.id}) }}" title="Editar Registro"><img  width="30px"  src="{{ asset('img/editar.png') }}"></a>
                    {% endif %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">No se han encontrado registros</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if nuevo|default(null) %}
      <div class="btn-group mr-2 btn-group-sm" role="group"  title="Nuevo Registro" >
            <button type="button" class="btn boton {{app.session.get('estilo')}} mr-2 btn-group-sm" role="button" onclick="location.href='{{  nuevo }}'"><i class="fa fa-plus-square"></i> Nuevo Registro</button>
        </div>
    {% endif %}
{% endblock %}
