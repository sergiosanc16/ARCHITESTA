{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
  <!-- Capa difuminada (si usas la clase blur-background de styles.css) -->
  <div class="blur-background"></div>

  <!-- Estructura de Bootstrap para centrar contenido -->
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="login-box p-4">
      {{ form_errors(form) }}
      <h1>Bienvenid@</h1>
      {{ form_start(form, {
                        action: path('app_login'),
                        method: 'POST'
                    }) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword, { label: 'Password' }) }}
        <button type="button" class="btn btn-secondary"
                onclick="window.location.href='{{ path('app_register') }}'">
          Register
        </button>
        <button type="submit" class="btn btn-primary">
          Login
        </button>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}