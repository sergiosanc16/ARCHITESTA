{% extends 'baseDatatable.html.twig' %}


{% set id_tabla = 'Poblaci√≥n' %}
{% set nuevo = path('app_testa_tpoblacion_new') %}
{% set muestraMenu = true %}

{% block title %}{{id_tabla}} Indice{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}

<h2>Listado de Poblaciones</h2>
    {% if nuevo|default(null) %}
    <div class="float-right">
    <div class="btn-group mr-2 btn-group-sm" role="group"  title="Nuevo Registro" >
            <button type="button" class="btn boton  mr-2 btn-group-sm" role="button" onclick="location.href='{{  nuevo }}'"><i class="fa fa-plus-square"></i> Nuevo Registro</button>
        </div>
    </div>
    {% endif %}
    <table id="{{id_tabla}}" class="table table-striped table-bordered table-sm  ">  
        <thead>
            <tr>
                <th width="5%">Id</th>
                <th>Poblacion</th>
                <th width="5%">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for testa_tpoblacion in testa_tpoblacions %}
            <tr>
                <td>{{ testa_tpoblacion.id }}</td>
                <td>{{ testa_tpoblacion.desPoblacion }}</td>
               <td>
                    <a href="{{ path('app_testa_tpoblacion_show', {'id': testa_tpoblacion.id}) }}" title="Mostrar Registro"><img  width="30px"   src="{{ asset('img/mostrar.png') }}"></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_testa_tpoblacion_edit', {'id': testa_tpoblacion.id}) }}" title="Editar Registro"><img  width="30px"  src="{{ asset('img/editar.png') }}"></a>
                    {% endif %}
                </td>                 
            </tr>
        {% else %}
            <tr>
               <td colspan="3">No se han encontrado registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if nuevo|default(null) %}
      <div class="btn-group mr-2 btn-group-sm" role="group"  title="Nuevo Registro" >
            <button type="button" class="btn boton  mr-2 btn-group-sm" role="button" onclick="location.href='{{  nuevo }}'"><i class="fa fa-plus-square"></i> Nuevo Registro</button>
        </div>
    {% endif %}


{% endblock %}
