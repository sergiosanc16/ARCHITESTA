{% extends 'baseDatatable.html.twig' %}


{% set id_tabla = 'otorgantes' %}
{% set nuevo = path('app_testa_ttestaotorgante_new') %}
{% set muestraMenu = true %}

{% block title %}{{id_tabla}} Indice{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}

<h2>Listado de Relacion Otorgantes de un testamento</h2>
    {% if nuevo|default(null) %}
    <div class="float-right">
    <div class="btn-group mr-2 btn-group-sm" role="group"  title="Nuevo Registro" >
            <button type="button" class="btn boton  mr-2 btn-group-sm" role="button" onclick="location.href='{{  nuevo }}'"><i class="fa fa-plus-square"></i> Nuevo Registro</button>
        </div>
    </div>
    {% endif %}
    <table id="{{id_tabla}}" class="table table-striped table-bordered table-sm  "> 
        <thead>
            <tr>
                <th width="5%">Id</th>
                <th>Orden</th>
                <th>Testamento</th>
                <th>Otorgante</th>
                <th>Oficio</th>
                <th width="10%">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for testa_ttestaotorgante in testa_ttestaotorgantes %}
            <tr>
                <td>{{ testa_ttestaotorgante.id }}</td>
                <td>{{ testa_ttestaotorgante.numOrden }}</td>
                <td>{{ testa_ttestaotorgante.testamento }}</td>
                <td>{{ testa_ttestaotorgante.otorgante }}</td>
                <td>{{ testa_ttestaotorgante.otorgante.idOficio }}</td>
                <td>
                    <a href="{{ path('app_testa_ttestamento_show', {'id': testa_ttestaotorgante.testamento.id}) }}" title="Mostrar Testamento"><img  width="30px"   src="{{ asset('img/testamento.png') }}"></a>
                    <a href="{{ path('app_testa_ttestaotorgante_show', {'id': testa_ttestaotorgante.id}) }}" title="Mostrar Registro"><img  width="30px"   src="{{ asset('img/mostrar.png') }}"></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_testa_ttestaotorgante_edit', {'id': testa_ttestaotorgante.id}) }}" title="Editar Registro"><img  width="30px"  src="{{ asset('img/editar.png') }}"></a>
                    {% endif %}
                </td> 
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No se han encontrado registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if nuevo|default(null) %}
      <div class="btn-group mr-2 btn-group-sm" role="group"  title="Nuevo Registro" >
            <button type="button" class="btn boton {{app.session.get('estilo')}} mr-2 btn-group-sm" role="button" onclick="location.href='{{  nuevo }}'"><i class="fa fa-plus-square"></i> Nuevo Registro</button>
        </div>
    {% endif %}
{% endblock %}
